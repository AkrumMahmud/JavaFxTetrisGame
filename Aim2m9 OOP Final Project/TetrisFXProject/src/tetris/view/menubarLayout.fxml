<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="35.0" prefWidth="390.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.controller.ControllerMenubar">
   <children>
      <MenuBar prefHeight="35.0" prefWidth="390.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleStat" text="Statistics" />               
              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </items>
          </Menu>
          <Menu fx:id="jeuItem" mnemonicParsing="false" text="Options">
            <items>
              <MenuItem fx:id="newGameItem" mnemonicParsing="false" onAction="#handleNewGame" text="New Game" />
                  <MenuItem fx:id="pauseItem" mnemonicParsing="false" onAction="#handlePause" text="Pause" />
                  <MenuItem fx:id="continueItem" mnemonicParsing="false" onAction="#handleContinue" text="Continue" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem mnemonicParsing="false" text="About" onAction="#handleAbout"/>
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
